<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jet"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="24dp"
        android:text="@string/SPARC_control"
        android:textColor="@color/primary_darker"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_down"
        android:layout_width="77dp"
        android:layout_height="92dp"
        android:layout_marginEnd="124dp"
        android:layout_marginTop="292dp"
        android:background="@color/jet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowicon_down" />

    <ImageButton
        android:id="@+id/imageButton_up"
        android:layout_width="77dp"
        android:layout_height="92dp"
        android:layout_marginEnd="124dp"
        android:layout_marginTop="116dp"
        android:background="@color/jet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowicon_up" />

    <ImageButton
        android:id="@+id/imageButton_left"
        android:layout_width="77dp"
        android:layout_height="92dp"
        android:layout_marginEnd="204dp"
        android:layout_marginTop="204dp"
        android:background="@color/jet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowicon_left" />

    <ImageButton
        android:id="@+id/imageButton_right"
        android:layout_width="77dp"
        android:layout_height="92dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="204dp"
        android:background="@color/jet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowicon_right" />

    <Button
        android:id="@+id/button"
        android:layout_width="344dp"
        android:layout_height="44dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="428dp"
        android:text="Schedule Device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>